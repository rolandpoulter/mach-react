{
  "name": "mach-react",
  "main": "./lib/index",
  "version": "0.1.2",
  "keywords": [
    "dangerous",
    "dom",
    "fast",
    "framework",
    "light",
    "mach",
    "micro",
    "react",
    "simple",
    "tiny",
    "ui",
    "view",
    "virtual"
  ],
  "description": "Fast, and tiny react implementation.",
  "homepage": "https://github.com/rolandpoulter/mach-react",
  "contributors": [
    {
      "name": "Roland Poulter"
    }
  ],
  "bugs": {
    "url": "https://github.com/rolandpoulter/mach-react/issues",
    "email": "matt@mattesch.info"
  },
  "repository": "git://github.com/rolandpoulter/mach-react.git",
  "author": "Roland Poulter",
  "license": "ISC",
  "engines": {
    "node": ">= 0.10",
    "npm": ">= 2.1"
  },
  "dependencies": {
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.3.2",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.2.0",
    "chai-spies": "^0.7.0",
    "eslint": "^1.1.0",
    "eslint-plugin-react": "^3.2.1",
    "express": "^4.13.3",
    "gulp": "^3.9.0",
    "gulp-eslint": "^0.15.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^1.2.0",
    "istanbul": "^0.3.17",
    "min-document": "^2.17.0",
    "mocha": "^2.2.5",
    "opn": "^3.0.2",
    "react": "^0.13.3",
    "run-browser": "^2.0.2",
    "tap-dot": "^1.0.0",
    "tap-spec": "^4.0.2",
    "tape": "^4.0.3",
    "webpack": "^1.11.0",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-dev-server": "^1.10.1",
    "zuul": "^3.2.0"
  },
  "peerDependencies": {},
  "scripts": {
    "browser": "run-browser test/index.js",
    "build": "babel ./src --out-dir ./lib",
    "cover": "istanbul cover --report html --print detail ./test/index.js",
    "dist": "browserify --standalone virtual-dom lib/index.js > dist/mach-react.js",
    "dot": "node ./test/index.js | tap-dot",
    "gzip": "gzip ./dist/mach-react.min.js",
    "lint": "gulp eslint",
    "phantom": "run-browser test/index.js -b | tap-spec",
    "prebuild": "rm -rf lib && mkdir lib",
    "predist": "npm run build && rm -rf dist && mkdir dist",
    "pregzip": "npm run uglify",
    "prepublish": "npm run dist && npm run gzip",
    "release-major": "git checkout master && npm version major && git push origin master --tags && npm publish",
    "release-minor": "git checkout master && npm version minor && git push origin master --tags && npm publish",
    "release-patch": "git checkout master && npm version patch && git push origin master --tags && npm publish",
    "release": "npm run release-patch",
    "start": "node ./benchmark/server",
    "test": "",
    "uglify": "gulp uglify",
    "view-cover": "istanbul report html && opn ./coverage/index.html"
  },
  "testling": {
    "files": "test/*.js",
    "browsers": [
      "ie/8..latest",
      "firefox/17..latest",
      "firefox/nightly",
      "chrome/22..latest",
      "chrome/canary",
      "opera/12..latest",
      "opera/next",
      "safari/5.1..latest",
      "ipad/6.0..latest",
      "iphone/6.0..latest",
      "android-browser/4.2..latest"
    ]
  }
}
